{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "inlineSources": true,
        "lib": ["dom", "es5", "es2015.iterable"],
        "module": "es2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": false,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src/**/*"]
}
